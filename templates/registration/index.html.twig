




{% block body %}
    <title>Zarejestruj</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
    <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet">
    {% if not(is_granted('IS_AUTHENTICATED_FULLY'))  %}

        <div class="justify-center">
            <div class="box">
                <h1>Stwórz profil</h1>
                {{ form_start(form,{'attr': {'novalidate':'true'}}) }}
                <form>
                <input type="checkbox" name="checkbox" checked="unchecked">
                    PRACODAWCA
                <div class="form-group ">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group ">
                    {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group ">
                    {{ form_row(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group row">
                    {{ form_row(form.avatar, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group ">
                    {{ form_row(form.CEIDG, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div>
                    <button type="submit" class="btn btn-md btn-warning">Utwórz</button>
                </div>
    {{ form_end(form) }}
                </form>
            <div>
                <hr />
                <h6>Masz juz konto?</h6>
                <div>
                    <a href="{{ path('app_login') }}" ><button type="button" class="btn btn-md btn-secondary">Zaloguj</button></a>
                </div>
            </div>
            </div>
        </div>



    {% else %}
        <p>Jesteś zalogowany</p>
    {% endif %}
