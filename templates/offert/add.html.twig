{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
 {% form_theme form
     'offert-form-theme.html.twig'
     'jquery.collection.html.twig'  %}
<div class="col-sm-12 col-md-6 ">
    <div class="card mb-4">
        <div class="card-block">
            <h3 class="card-title">Contact Form</h3>
            <h6 class="card-subtitle mb-2 text-muted">Subtitle</h6>

                {{ form_start(form,{'attr': {'novalidate':'true'}}) }}
                {{ form_errors(form) }}

                <fieldset>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="name">Nazwa oferty</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.title) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="email">Krótki opis</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="message">Opis stanowiska</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.content) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="message">Wynagrodzenie minimalne</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.salaryMin) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="message">Wynagrodzenie maksymalne</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.salaryMax) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-12 control-label no-padding" for="message">Umiejętności</label>
                        <div class="col-12 no-padding">
                            {{ form_row(form.skill) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12 widget-right no-padding">
                            <button type="submit" class="btn btn-primary btn-md float-right">Submit</button>
                        </div>
                    </div>

                </fieldset>
                {{ form_end(form) }}

        </div>
    </div>
<div class="row center">
<div class="col-6 ">




</div>
</div>
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('web/js/jquery.collection.js') }}"></script>
        <script>
            $('.skills').collection({

                allow_up: false,
                allow_down: false,
                init_with_n_elements: 1,
                prefix: 'skill',

            });


        </script>
    {% endblock %}
{% endblock %}
